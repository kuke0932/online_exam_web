/* pages/login/login.wxss */
page{ 
 height: 100%; 
} 
  
.login_container { 
 height: 100%; 
 display: flex; 
 flex-direction: column; 
 padding: 0; 
 box-sizing: border-box; 
 background-color: #f2f2f2
} 
  
/*登录图片*/
.login-icon{ 
 flex: none; 
} 
.login-img{ 
 width: 750rpx; 
} 
  
/*表单内容*/
.login-form { 
 margin-top: 40rpx; 
 flex: auto; 
 height:100%; 
} 
  
.inputView { 
 background-color: #fff; 
 line-height: 88rpx; 
} 
/*输入框*/
.nameImage, .keyImage { 
  margin-left: 44rpx;  
 width: 28rpx; 
 height: 28rpx
} 
  
.loginLab { 
 margin: 30rpx 30rpx 30rpx 20rpx; 
 color: #545454; 
 font-size: 28rpx
} 
.inputText { 
 text-align: right; 
 margin-right: 44rpx; 
 margin-top: 22rpx; 
 color: #cccccc; 
 font-size: 28rpx;
 min-width: 440rpx
} 
  
.line { 
 width: 100%; 
 height: 2rpx; 
 background-color: #cccccc; 
 margin-top: 2rpx; 
} 
/*忘记密码*/
.forgot_pwd{
  color:#e64300;
  font-size: 24rpx;
  float: right;
  margin-right: 20rpx;
  margin-top: 20rpx;
}
/*按钮*/
.loginBtnView { 
  width: 100%; 
  height: auto; 
  background-color: #f2f2f2; 
  margin-top: 150rpx; 
  margin-bottom: 0rpx; 
  padding-bottom: 0rpx; 
} 
  
.loginBtn { 
  width: 70%;  
}