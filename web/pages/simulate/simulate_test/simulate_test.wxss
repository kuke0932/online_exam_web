/* pages/simulate/simulate_test/simulate_test.wxss */
.qes_container {
   position:relative; 
}
.header_details{
  position: fixed;
  top:0;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #0169B2;
  font-size: 32rpx;
  color: #fff;
  z-index: 100;
}
.sy_time{
  width: 65%;
  float: left;
  text-align: center;
}
.quit{
  width: 10%;
  float: left;
  text-align: center;line-height: 70rpx;
}
.quit image{
  width:40rpx;
  height: 38rpx;
  display: inline-block;
  vertical-align: sub;
}
.submit{
  width: 30%;
  float: right;
  text-align: center;
  background: #F1A45E;
}
.confirm_ans{
  margin: 30rpx 150rpx 0;
}
.explain .explain_title {
  font-size:30rpx;
  text-align:left;
  color:#fff;
  margin-top:50rpx;
  border-bottom: 2px solid #1396F1; 
}
.explain .explain_title .explain_title_content {
  padding: 4px 20rpx;
  background-color: #1396F1;
}
.explain .explain_details {
  padding: 0 20rpx;
}
.explain .explain_details .details_content {
  font-size: 32rpx;
  text-align: justify;
  letter-spacing:1rpx;
  color: #666;
}
.count_detail{
  width: 100%;
  position: fixed;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
  color: #fff;
  font-size: 32rpx;
  background: #1396F1;
  transition: bottom 0.5s;
  z-index: 9999;
}
.count_list{
  width: 100%;
  text-align: center;
  background:#f5f5f5;
  font-size: 0.6em;
  color: #666;
  height: 602rpx;
  overflow: hidden;
}
.count_item{
  border: 2rpx solid #ccc;
  border-radius: 50%;
  padding: 10rpx;
  width:50rpx;
  height:50rpx;
  line-height:50rpx;
  font-size: 30rpx;
  display: inline-block;
  margin: 5rpx;
  text-align: center
}
.mask{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  position: absolute;
  top:0;
}